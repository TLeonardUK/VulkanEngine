{
    "Type": "Shader",    
    
    "FrameBuffer": "GBuffer",
    "FaceWindingOrder": "Clockwise",
    
    "Stages":
    {
        "Vertex":
        {
            "ShaderPath": "Engine/Shaders/default_cube.vert",
            "EntryPoint": "main",
            "VertexStreams":
            {
                "inPosition":
                {
                    "Format": "Float3",
                    "Location": 0,
                    "BindTo": "Position"
                },
                "inNormal":
                {
                    "Format": "Float3",
                    "Location": 1,
                    "BindTo": "Normal"
                },
                "inTexCoord1":
                {
                    "Format": "Float2",
                    "Location": 2,
                    "BindTo": "TexCoord1"
                }
            }
        },
        "Fragment":
        {
            "ShaderPath": "Engine/Shaders/default_cube.frag",
            "EntryPoint": "main"
        }
    },
    "Bindings":
    {   
        "globalProperties":
        {
            "Type": "UniformBufferObject",
            "Binding": 0,
            "Fields":
            {                      
                "view":
                {
                    "Format": "Matrix4",
                    "Location": 0,
                    "BindTo": "ViewMatrix"
                },                        
                "proj":
                {
                    "Format": "Matrix4",
                    "Location": 1,
                    "BindTo": "ProjectionMatrix"
                },                        
                "camPosition":
                {
                    "Format": "Float3",
                    "Location": 2,
                    "BindTo": "CameraPosition"
                }
            }
        },
        "meshProperties":
        {
            "Type": "UniformBufferObject",
            "Binding": 1,
            "Fields":
            {
                "model":
                {
                    "Format": "Matrix4",
                    "Location": 0,
                    "BindTo": "ModelMatrix"
                },                           
                "camPosition":
                {
                    "Format": "Float3",
                    "Location": 1,
                    "BindTo": "CameraPosition"
                }
            }
        },
        "albedoTextureSampler":
        {
            "Type": "SamplerCube",
            "Binding": 2,
            "BindTo": "AlbedoTexture"
        }
    }
}