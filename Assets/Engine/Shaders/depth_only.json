{
    "Type": "Shader",    
   
    "FrameBuffer": "DepthBuffer",
	
	"CullMode": "None",
	
	"DepthBiasEnabled": true,
    "DepthBiasConstant": 1.25,
	"DepthBiasSlopeFactor": 1.75,
	"DepthBiasClamp": 0.0,
	
	"DepthClampEnabled": true,
	
    "Stages":
    {
        "Vertex":
        {
            "ShaderPath": "Engine/Shaders/depth_only.vert",
            "EntryPoint": "main",
            "VertexStreams":
            {
                "inPosition":
                {
                    "Format": "Float3",
                    "Location": 0,
                    "BindTo": "Position"
                }
            }
        },
        "Fragment":
        {
            "ShaderPath": "Engine/Shaders/depth_only.frag",
            "EntryPoint": "main"
        }
    },
    "Bindings":
    {   
        "meshProperties":
        {
            "Type": "UniformBufferObject",
            "Binding": 0,
			"Set": 0,
			"Frequency": "Mesh",
            "Fields":
            {
                "model":
                {
                    "Format": "Matrix4",
                    "BindTo": "ModelMatrix"
                }
            }
        },	
        "globalProperties":
        {
            "Type": "UniformBufferObject",
            "Binding": 0,
			"Set": 1,
			"Frequency": "View",
            "Fields":
            {                     
                "view":
                {
                    "Format": "Matrix4",
                    "BindTo": "ViewMatrix"
                },                        
                "proj":
                {
                    "Format": "Matrix4",
                    "BindTo": "ProjectionMatrix"
                }
            }
        }
    }
}