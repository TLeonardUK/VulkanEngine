{
    "Type": "Shader",    
    
    "FaceWindingOrder": "Clockwise",
    
    "Stages":
    {
        "Vertex":
        {
            "ShaderPath": "Engine/Shaders/skybox.vert",
            "EntryPoint": "main",
            "VertexStreams":
            {
                "inPosition":
                {
                    "Format": "Float3",
                    "Location": 0,
                    "BindTo": "Position"
                },
                "inTexCoord":
                {
                    "Format": "Float2",
                    "Location": 1,
                    "BindTo": "TexCoord1"
                },
                "inNormal":
                {
                    "Format": "Float3",
                    "Location": 2,
                    "BindTo": "Normal"
                }
            }
        },
        "Fragment":
        {
            "ShaderPath": "Engine/Shaders/skybox.frag",
            "EntryPoint": "main"
        }
    },
    "Bindings":
    {   
        "ubo":
        {
            "Type": "UniformBufferObject",
            "Binding": 0,
            "Fields":
            {
                "model":
                {
                    "Format": "Matrix4",
                    "Location": 0,
                    "BindTo": "ModelMatrix"
                },                        
                "view":
                {
                    "Format": "Matrix4",
                    "Location": 1,
                    "BindTo": "ViewMatrix"
                },                        
                "proj":
                {
                    "Format": "Matrix4",
                    "Location": 2,
                    "BindTo": "ProjectionMatrix"
                },                        
                "camPosition":
                {
                    "Format": "Float3",
                    "Location": 3,
                    "BindTo": "CameraPosition"
                }
            }
        },
        "skyboxSampler":
        {
            "Type": "Sampler",
            "Binding": 1,
            "BindTo": "DiffuseTexture"
        }
    }
}